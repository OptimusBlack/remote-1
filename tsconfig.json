{
  "compilerOptions": {
    "baseUrl": "./src",
    "outDir": "./build/",
    "lib": [
      "es2019",
      "dom.iterable",
      "dom"
    ],
    "sourceMap": true,
    "allowJs": true,
    "jsx": "react",
    "target": "es2019",
    "module": "ESNext",
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "moduleResolution": "Node"
  },
  "include": [
    "./src/**/*",
    "./src/typings/**/*.d.ts"
  ]
}
